<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
	<appender name="file" class="org.apache.log4j.RollingFileAppender"> 
		<param name="File" value="log/info.log"/> 
		<layout class="org.apache.log4j.PatternLayout"> 
			<param name="ConversionPattern" value="%d{ISO8601} %-5p %c{2} [%l] %m%n"/> 
		</layout>
	</appender> 

	<appender name="console" class="org.apache.log4j.ConsoleAppender"> 
		<layout class="org.apache.log4j.PatternLayout"> 
			<param name="ConversionPattern" value="%m%n"/> 
		</layout> 
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="error"/>
			<param name="LevelMin" value="info"/>
			<param name="AcceptOnMatch" value="true"/>
		</filter>
	</appender> 
	
	<appender name="traceconsole" class="org.apache.log4j.ConsoleAppender"> 
		<layout class="org.apache.log4j.PatternLayout"> 
			<param name="ConversionPattern" value="%m%n"/> 
		</layout> 
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="trace"/>
			<param name="LevelMin" value="trace"/>
			<param name="AcceptOnMatch" value="true"/>
		</filter>
	</appender> 

	<!-- -Dstdout=trace in JVM arg runs trace -->
	<root> 
		<level value="all"/> 
		<appender-ref ref="file"/> 
		<appender-ref ref="${stdout}console"/> 
	</root>
</log4j:configuration>